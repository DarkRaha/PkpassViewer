<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/cWhite"
    >

    <LinearLayout
        android:id="@+id/li_pkpass_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/li_pkpass_margin"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/li_pkpass_imgIcon"
            android:layout_width="@dimen/li_pkpass_logo_size"
            android:layout_height="@dimen/li_pkpass_logo_size" 
            android:layout_marginRight="@dimen/li_pkpass_margin"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/li_pkpass_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test" />

              <TextView
                android:id="@+id/li_pkpass_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test2" />
              
            <TextView
                android:id="@+id/li_pkpass_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test2" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/li_pkpass_separator"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/li_pkpass_separatar_height"
        android:layout_below="@id/li_pkpass_content"
        android:layout_marginLeft="@dimen/li_pkpass_margin"
        android:layout_marginRight="@dimen/li_pkpass_margin"
        android:background="@color/cGray55" />

    <LinearLayout
        android:id="@+id/li_pkpass_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/li_pkpass_separator"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/li_pkpass_txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@null"
            android:paddingLeft="@dimen/li_pkpass_margin"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>